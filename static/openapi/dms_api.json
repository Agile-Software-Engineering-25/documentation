{
  "openapi": "3.1.0",
  "info": {
    "title": "Document Management System API",
    "description": "A modern REST API for document and folder management.\n\n## Error Handling\nAll endpoints return standardized error responses with machine-readable error codes.\n\n## Error Codes\n- `DOC_*`: Document-related errors\n- `FOLDER_*`: Folder-related errors\n- `VAL_*`: Validation errors\n- `SYS_*`: System errors\n",
    "contact": {
      "name": "DMS Development Team",
      "email": "dev-team@example.com"
    },
    "license": {
      "name": "MIT License",
      "url": "https://opensource.org/licenses/MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://sau-portal.de/document-management/document-management",
      "description": "Development server"
    }
  ],
  "tags": [
    {
      "name": "Documents",
      "description": "Document management operations"
    },
    {
      "name": "Folders",
      "description": "Folder management and navigation operations"
    }
  ],
  "paths": {
    "/dms/v1/folders": {
      "post": {
        "tags": [
          "Folders"
        ],
        "summary": "Create a new folder",
        "operationId": "createFolder",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FolderEntity"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Folder created successfully",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/FolderEntity"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ValidationErrorResponse"
          }
        }
      }
    },
    "/dms/v1/documents": {
      "post": {
        "tags": [
          "Documents"
        ],
        "summary": "Upload a new document",
        "operationId": "uploadDocument",
        "parameters": [
          {
            "name": "folderId",
            "in": "query",
            "description": "Target folder UUID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "File to upload"
                  }
                },
                "required": [
                  "file"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Document uploaded successfully",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/DocumentEntity"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/DocumentUploadFailedResponse"
          },
          "413": {
            "$ref": "#/components/responses/PayloadTooLargeResponse"
          }
        }
      }
    },
    "/dms/v1/folders/{id}": {
      "get": {
        "tags": [
          "Folders"
        ],
        "summary": "Get folder contents",
        "description": "Retrieves the contents of a folder. Use 'root' for the root folder.",
        "operationId": "getFolderContents",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Folder UUID or 'root'",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Folder contents retrieved successfully",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/FolderResponseDTO"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequestResponse"
          },
          "404": {
            "$ref": "#/components/responses/FolderNotFoundResponse"
          }
        }
      },
      "delete": {
        "tags": [
          "Folders"
        ],
        "summary": "Delete a folder",
        "operationId": "deleteFolder",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Folder UUID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Folder deleted successfully"
          },
          "400": {
            "$ref": "#/components/responses/BadRequestResponse"
          },
          "404": {
            "$ref": "#/components/responses/FolderNotFoundResponse"
          }
        }
      },
      "patch": {
        "tags": [
          "Folders"
        ],
        "summary": "Update folder metadata",
        "operationId": "updateFolder",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Folder UUID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FolderEntity"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Folder updated successfully",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/FolderEntity"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequestResponse"
          },
          "404": {
            "$ref": "#/components/responses/FolderNotFoundResponse"
          }
        }
      }
    },
    "/dms/v1/documents/{id}": {
      "get": {
        "tags": [
          "Documents"
        ],
        "summary": "Get document by ID",
        "operationId": "getDocumentById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Document UUID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Document found",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/DocumentEntity"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequestResponse"
          },
          "404": {
            "$ref": "#/components/responses/DocumentNotFoundResponse"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerErrorResponse"
          }
        }
      },
      "delete": {
        "tags": [
          "Documents"
        ],
        "summary": "Delete a document",
        "operationId": "deleteDocument",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Document UUID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Document deleted successfully"
          },
          "400": {
            "$ref": "#/components/responses/BadRequestResponse"
          },
          "404": {
            "$ref": "#/components/responses/DocumentNotFoundResponse"
          }
        }
      },
      "patch": {
        "tags": [
          "Documents"
        ],
        "summary": "Update document metadata",
        "operationId": "updateDocument",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Document UUID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DocumentEntity"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Document updated successfully",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/DocumentEntity"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ValidationErrorResponse"
          },
          "404": {
            "$ref": "#/components/responses/DocumentNotFoundResponse"
          }
        }
      }
    },
    "/dms/v1/documents/{id}/download": {
      "get": {
        "tags": [
          "Documents"
        ],
        "summary": "Download document file",
        "operationId": "downloadDocument",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Document UUID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "File downloaded successfully",
            "content": {
              "application/octet-stream": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/DocumentNotFoundResponse"
          }
        }
      }
    },
    "/": {
      "get": {
        "tags": [
          "root-controller"
        ],
        "operationId": "root",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ErrorResponse": {
        "description": "Standard error response format",
        "properties": {
          "errorCode": {

          },
          "message": {

          },
          "status": {

          },
          "path": {

          },
          "timestamp": {
            "format": "date-time"
          },
          "details": {

          }
        }
      },
      "FolderEntity": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Eindeutige ID des Ordners",
            "example": "03d3d491-1fa7-437f-b617-698a4d4c9d84",
            "readOnly": true
          },
          "name": {
            "type": "string",
            "description": "Name des Ordners",
            "example": "Projekte",
            "maxLength": 255,
            "minLength": 1
          },
          "parentId": {
            "type": "string",
            "description": "ID des übergeordneten Ordners als uuid",
            "example": "c12b8e51-6c40-42b6-86e9-d8cf823f4d34"
          },
          "createdDate": {
            "type": "string",
            "format": "date-time",
            "description": "Erstellungsdatum",
            "readOnly": true
          }
        },
        "required": [
          "name"
        ]
      },
      "DocumentEntity": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Eindeutige ID des Dokuments",
            "example": "4111b676-474c-4014-a7ee-53fc5cb90127",
            "readOnly": true
          },
          "name": {
            "type": "string",
            "description": "Name des Dokuments",
            "example": "wichtiges_dokument",
            "maxLength": 255,
            "minLength": 1
          },
          "type": {
            "type": "string",
            "description": "Dateityp",
            "example": "pdf",
            "minLength": 1
          },
          "size": {
            "type": "integer",
            "format": "int64",
            "description": "Dateigröße in Bytes",
            "readOnly": true
          },
          "folderId": {
            "type": "string",
            "description": "ID des übergeordneten Ordners als uuid",
            "example": "ef9b2274-817e-4cba-879e-383548577f4e"
          },
          "ownerId": {
            "type": "string",
            "description": "ID des Besitzers (User) des Dokuments"
          },
          "createdDate": {
            "type": "string",
            "format": "date-time",
            "description": "Erstellungsdatum",
            "readOnly": true
          },
          "downloadUrl": {
            "type": "string",
            "description": "Download-URL des Dokuments",
            "example": "/dms/v1/documents/4111b676-474c-4014-a7ee-53fc5cb90127/download",
            "readOnly": true
          },
          "data": {
            "type": "string",
            "format": "byte",
            "description": "Dateiinhalt",
            "readOnly": true
          }
        },
        "required": [
          "name",
          "type"
        ]
      },
      "FolderResponseDTO": {
        "type": "object",
        "properties": {
          "folder": {
            "$ref": "#/components/schemas/FolderEntity"
          },
          "subfolders": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FolderEntity"
            }
          },
          "documents": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DocumentEntity"
            }
          }
        }
      }
    },
    "responses": {
      "BadRequestResponse": {
        "description": "Bad Request - Invalid input data",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      },
      "NotFoundResponse": {
        "description": "Resource not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      },
      "ValidationErrorResponse": {
        "description": "Validation failed",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      },
      "InternalServerErrorResponse": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      },
      "PayloadTooLargeResponse": {
        "description": "File size exceeds maximum allowed size",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      },
      "DocumentNotFoundResponse": {
        "description": "Document not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "example": {
              "message": "Document with ID '2a2d1575-1ba8-446b-a78c-c2035a178588' was not found",
              "timestamp": "2025-01-05T10:30:00Z",
              "errorCode": "DOC_NOT_FOUND",
              "status": 404
            }
          }
        }
      },
      "DocumentUploadFailedResponse": {
        "description": "Document upload failed",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "example": {
              "message": "Document upload failed",
              "timestamp": "2025-01-05T10:30:00Z",
              "errorCode": "DOC_UPLOAD_FAILED",
              "status": 400
            }
          }
        }
      },
      "FolderNotFoundResponse": {
        "description": "Folder not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "example": {
              "message": "Folder with ID '2a2d1575-1ba8-446b-a78c-c2035a178588' was not found",
              "timestamp": "2025-01-05T10:30:00Z",
              "errorCode": "FOLDER_NOT_FOUND",
              "status": 404
            }
          }
        }
      }
    }
  }
}